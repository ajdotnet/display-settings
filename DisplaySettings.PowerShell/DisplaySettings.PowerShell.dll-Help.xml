        </maml:description>
        <command:syntax>
            <command:syntaxItem>
                <maml:name>get-DisplayDevices</maml:name>
            </command:syntaxItem>
        </command:syntax>
        <command:parameters>
        </command:parameters>
        <command:inputTypes>
            <command:inputType>
                <dev:type>
                    <maml:name>none.</maml:name>
                    <maml:description>
                        <maml:para>No values taken from the pipeline.</maml:para>
                    </maml:description>
                </dev:type>
            </command:inputType>
        </command:inputTypes>
